{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Gemini Connection Inventory",
  "type": "object",
  "properties": {
    "systems": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "base_url": { "type": "string", "format": "uri" },
          "auth_type": { "enum": ["api_key", "bearer", "oauth2", "basic"] },
          "credential_ref": { "type": "string", "description": "Path to secret in Personal tier" }
        },
        "required": ["auth_type", "credential_ref"]
      }
    }
  }
}
